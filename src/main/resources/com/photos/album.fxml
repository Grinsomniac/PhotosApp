<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photos.controllers.AlbumController">
   <children>
      <TableView fx:id="photoTable" layoutX="138.0" prefHeight="400.0" prefWidth="462.0">
        <columns>
          <TableColumn fx:id="photoColumn" prefWidth="210.0" text="Photo" />
          <TableColumn fx:id="captionColumn" prefWidth="251.0" text="Caption" />
        </columns>
      </TableView>
      <Button fx:id="addPhoto" layoutX="20.0" layoutY="81.0" mnemonicParsing="false" onAction="#addPhoto" text="Add Photo">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="removePhoto" layoutX="6.0" layoutY="124.0" mnemonicParsing="false" onAction="#removePhoto" text="Remove Photo">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="captionPhoto" layoutX="20.0" layoutY="165.0" mnemonicParsing="false" onAction="#captionPhoto" text="Edit Caption">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="displayPhoto" layoutX="12.0" layoutY="225.0" mnemonicParsing="false" onAction="#displayPhoto" prefHeight="35.0" prefWidth="124.0" text="Display Photo">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="copyPhoto" layoutX="19.0" layoutY="293.0" mnemonicParsing="false" onAction="#copyPhoto" prefHeight="35.0" prefWidth="110.0" text="Copy Photo">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="movePhoto" layoutX="19.0" layoutY="343.0" mnemonicParsing="false" onAction="#movePhoto" prefHeight="35.0" prefWidth="110.0" text="Move Photo">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="albumReturnToHome" layoutX="12.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleAlbumReturnToHome" prefHeight="35.0" prefWidth="110.0" text="Home">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
